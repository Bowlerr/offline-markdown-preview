{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "omv: build",
      "type": "npm",
      "script": "build",
      "problemMatcher": []
    },
    {
      "label": "omv: watch",
      "type": "npm",
      "script": "watch",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^(?!x)x$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "esbuild",
          "endsPattern": "watching for changes|Done in"
        }
      }
    }
  ]
}
